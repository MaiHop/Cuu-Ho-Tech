                                android:textSize="12sp" />

                            <ProgressBar
                                android:id="@+id/progressThreeStar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:max="100"
                                android:progress="90"
