<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/primary_secondary"
    tools:context=".Test.Test_Create_Request_Activity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW BOTTOM SHEET DIALOG" />

    <TextView
        android:id="@+id/tv_TechnicianLocation_current_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|start"
        android:letterSpacing="0.05"
        android:lineHeight="24sp"
        android:text="Vị trí của bạn"
        android:textColor="@color/neutral_main"
        android:textSize="16sp"
        android:textStyle="normal" />
</LinearLayout>