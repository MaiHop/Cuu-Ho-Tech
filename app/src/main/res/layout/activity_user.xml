<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/primary_secondary"
    tools:context=".Presentation.Activity.UserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_avata_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="100dp">
                    <ImageView
                        android:id="@+id/img_avatar_user"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:maxWidth="84dp"
                        android:maxHeight="84dp"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_bg_detail_service"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mai Hop"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:textColor="@color/neutral_main"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="097462387456"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_main"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/boder_radius">
                <LinearLayout
                    android:id="@+id/ll_update_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    tools:ignore="InvalidId">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_detail_account"
                        android:layout_marginRight="10dp"
                        app:tint="@color/neutral_main" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hồ sơ cá nhân"
                        android:textSize="22sp"
                        android:textColor="@color/neutral_main"
                        android:gravity="left"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_right"
                        android:gravity="right"
                        app:tint="@color/black" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/neutral_light_border"/>
                <LinearLayout
                    android:id="@+id/ll_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_card"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phương thức thanh toán"
                        android:textSize="22sp"
                        android:textColor="@color/neutral_main"
                        android:gravity="left"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_right"
                        android:gravity="right"
                        app:tint="@color/black" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/neutral_light_border"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_key"
                        android:layout_marginRight="10dp"
                        app:tint="@color/neutral_main" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đổi mật khẩu"
                        android:textSize="22sp"
                        android:textColor="@color/neutral_main"
                        android:gravity="left"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_right"
                        android:gravity="right"
                        app:tint="@color/black" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/neutral_light_border"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_delete_account"
                        android:layout_marginRight="10dp"
                        app:tint="@color/neutral_main" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Xoá tài khoản"
                        android:textSize="22sp"
                        android:textColor="@color/neutral_main"
                        android:gravity="left"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_right"
                        android:gravity="right"
                        app:tint="@color/black" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/neutral_light_border"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_technics"
                        android:layout_marginRight="10dp"
                        app:tint="@color/neutral_main" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trở thành kỹ thuật viên"
                        android:textSize="22sp"
                        android:textColor="@color/neutral_main"
                        android:gravity="left"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_right"
                        android:gravity="right"
                        app:tint="@color/black" />
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_danger_outline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/custom_button_danger_outline"
                android:stateListAnimator="@animator/button_scale_state"
                android:text="ĐĂNG XUẤT"
                android:textAllCaps="false"
                android:textColor="@color/button_color_danger"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.23"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>