<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right">
        <androidx.appcompat.widget.AppCompatToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/selector_toggle_button_text_color"
            android:background="@drawable/background_button_radius_top_bottom_left"
            android:textOff="Sắp xếp"
            android:textOn="Sắp xếp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:drawableLeft="@drawable/ic_sorting_h14"
            android:drawableTint="@color/selector_toggle_button_icon_tint"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/selector_toggle_button_text_color"
            android:background="@drawable/background_button_radius_top_bottom_right"
            android:textOff="Lọc"
            android:textOn="Lọc"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:drawableLeft="@drawable/ic_find"
            android:drawableTint="@color/selector_toggle_button_icon_tint"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_order_rescue_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>