<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/background_item_layout_service">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left">
                <CheckBox
                    android:id="@+id/cb_service"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_car_gear" />
                <TextView
                    android:id="@+id/tv_name_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Sửa xe"
                    android:textColor="@color/neutral_main"
                    android:textSize="16sp"
                    android:lineHeight="24dp"
                    android:letterSpacing="0.05"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center|left">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp">
                    <ImageView
                        android:id="@+id/img_service"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:background="@drawable/image_place_holder" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:text="Số lượng: "
                            android:textColor="@color/neutral_main"
                            android:textSize="12sp"
                            android:lineHeight="16dp"
                            android:letterSpacing="0.05"/>
                        <TextView
                            android:id="@+id/tv_count_service"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:text="1"
                            android:textStyle="bold"
                            android:textColor="@color/neutral_main"
                            android:textSize="12sp"
                            android:lineHeight="16dp"
                            android:letterSpacing="0.05"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:text="Đơn giá: "
                            android:textColor="@color/neutral_main"
                            android:textSize="12sp"
                            android:lineHeight="16dp"
                            android:letterSpacing="0.05"/>
                        <TextView
                            android:id="@+id/tv_price_service"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:text="2.000.000đ"
                            android:textColor="@color/neutral_main"
                            android:textSize="14sp"
                            android:lineHeight="16dp"
                            android:letterSpacing="0.05"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center|left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:text="Thành tiền: "
                            android:textColor="@color/neutral_main"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:lineHeight="24sp"
                            android:letterSpacing="0.05"/>
                        <TextView
                            android:id="@+id/tv_total_price_service"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:text="2.000.000đ"
                            android:textColor="@color/success_main"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:lineHeight="24sp"
                            android:letterSpacing="0.05"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_edit_service"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_edit_service"/>
            <ImageView
                android:id="@+id/img_delete_service"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete_service"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>