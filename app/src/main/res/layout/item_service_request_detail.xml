<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_service_request_detail"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="1"
        android:columnCount="4"
       >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_service_request_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lineHeight="24sp"
                android:letterSpacing="0.05"
                android:text="Sửa xe"
                android:textColor="@color/neutral_main"
                android:textSize="16sp"
                android:textStyle="normal"

                />
            <TextView
                android:id="@+id/tv_service_request_detail_warranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lineHeight="20sp"
                android:letterSpacing="0"
                android:text="Bảo hành"
                android:textColor="@color/neutral_main"
                android:textSize="14sp"
                android:textStyle="normal"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_service_request_detail_quantity"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="top|center"
            android:lineHeight="24sp"
            android:letterSpacing="0.05"
            android:text="1"
            android:textColor="@color/neutral_main"
            android:textSize="16sp"
            android:textStyle="normal"/>


        <GridLayout
            android:rowCount="2"
            android:columnCount="1"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/tv_service_request_detail_sv_price"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:gravity="top|end"
                android:lineHeight="16sp"
                android:letterSpacing="0.05"
                android:text="2.000.000.000đ"
                android:textColor="@color/success_main"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_service_request_detail_privce"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:gravity="top|end"
                android:lineHeight="16sp"
                android:letterSpacing="0.05"
                android:text="2.000.000.000.000.0000.đ"
                android:textColor="@color/success_main"
                android:textSize="14sp"
                android:textStyle="normal" />
        </GridLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_edit_service"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_edit_service"/>
            <ImageView
                android:id="@+id/img_delete_service"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete_service"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>