<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_no_internet">
    <ImageView
        android:id="@+id/iv_TechnicianItem_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_disconnect_wifi"
        app:tint="@color/neutral_focus"
        android:scaleType="fitXY"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="top"
        android:letterSpacing="0.05"
        android:lineHeight="24sp"
        android:text="Vui lòng kiểm tra kết nối Internet"
        android:textColor="@color/neutral_focus"
        android:textSize="16sp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_outline_disabled"
        android:stateListAnimator="@animator/button_scale_state"
        android:text="Tải lại"
        android:textAllCaps="false"
        android:textColor="@color/neutral_focus"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>